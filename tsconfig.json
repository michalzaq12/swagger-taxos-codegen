{
    "compilerOptions": {
        "target": "es2015",
        "lib": ["es2017", "es2015"],
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "preserveWatchOutput": true,
        "rootDir": "./src",
        "outDir": "lib",
        "declaration": true
    },
    "include": ["src/**/*.ts"]
}
